@model Domain.Models.ViewModel.AddMoneyViewModel
@using Domain.App_GlobalResources;
@using Domain.Constants;

<h5>
    @CommonResources.txtNumberOfMarketingDays
    <a href="#" data-toggle="tooltip" title="@CommonResources.NumberOfMarketingDaysDescription">@CommonResources.QuestionMarkLinkSymbol</a>
    <br />
    <small>
        @Html.Raw(CommonResources.NumberOfMarketingDaysDescription)
    </small>
</h5>

<div class="row">
    <div class="col-lg-2">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            @Html.TextBoxFor(model => model.NumberOfCampaignDays, new { @class = "form-control", placeholder = string.Format(CommonResources.NewQuestionAmtPlaceHolder, General.MinimumMarketingDays) })
            <span class="input-group-addon">days</span>
        </div>
    </div>
</div>
@Html.ValidationMessageFor(model => model.NumberOfCampaignDays)

<br />
<p>
    <button type="submit" class="btn btn-primary btn-lg">@CommonResources.lblPrePost</button>
</p>
