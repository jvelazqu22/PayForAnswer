@model Domain.Models.ViewModel.AddMoneyViewModel
@using Domain.App_GlobalResources;
@using Domain.Constants;

<h5>
    @CommonResources.txtIncreaseQuestionAmountBy
    <a href="#" data-toggle="tooltip" title="@CommonResources.IncreaseQuestionAmount">@CommonResources.QuestionMarkLinkSymbol</a>
    <br />
    <small>
        @Html.Raw(CommonResources.IncreaseQuestionAmount)
    </small>
</h5>

<div class="row">
    <div class="col-lg-2">
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.TextBoxFor(model => model.QuestionAmountIncrease, new { @class = "form-control" })
            <span class="input-group-addon">.00</span>
        </div>
    </div>
</div>
@Html.ValidationMessageFor(model => model.QuestionAmountIncrease)
