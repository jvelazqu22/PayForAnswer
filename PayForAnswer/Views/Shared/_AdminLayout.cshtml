    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Bootstrap samples/assets/js/jquery.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-transition.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-alert.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-modal.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-dropdown.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-scrollspy.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-tab.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-tooltip.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-popover.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-button.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-collapse.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-carousel.js"></script>
    <script src="~/Bootstrap samples/assets/js/bootstrap-typeahead.js"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
