@model Domain.Models.LocalPasswordModel
@using Domain.App_GlobalResources;

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    
    <fieldset>
        <legend>Change Password Form</legend>

        @Html.LabelFor(m => m.OldPassword)
        <div class="row">
          <div class="col-lg-3">
            <div class="input-group merged">
                @*<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>*@
                <span class="input-group-addon"><i class="fa fa-lock fa-lg"></i></span>
                @*<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>*@
                @Html.PasswordFor(m => m.OldPassword, new { @class="form-control", autofocus = ""})
            </div>
            @Html.ValidationMessageFor(m => m.OldPassword) <br />
          </div>
        </div>

        @Html.LabelFor(m => m.NewPassword)
        <div class="row">
          <div class="col-lg-3">
            <div class="input-group merged">
                <span class="input-group-addon"><i class="fa fa-lock fa-lg"></i></span>
            @Html.PasswordFor(m => m.NewPassword, new { @class="form-control"})
            </div>
            @Html.ValidationMessageFor(m => m.NewPassword) <br />
          </div>
        </div>

        @Html.LabelFor(m => m.ConfirmPassword)
        <div class="row">
          <div class="col-lg-3">
            <div class="input-group merged">
                <span class="input-group-addon"><i class="fa fa-lock fa-lg"></i></span>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class="form-control"})
            </div>
            @Html.ValidationMessageFor(m => m.ConfirmPassword) <br />
          </div>
        </div>

        <br />
        <button class="btn btn-lg btn-primary" type="submit">@CommonResources.LblResetPassword</button>
    </fieldset>
}
