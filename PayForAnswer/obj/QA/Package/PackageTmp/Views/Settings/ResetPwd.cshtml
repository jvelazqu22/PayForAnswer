@model Domain.Models.LocalPasswordModel
@using Domain.App_GlobalResources;

@{
    ViewBag.Title = CommonResources.RequestPwdResetViewBrowserTitle;
}

<h2>Reset Password</h2>

@using (Html.BeginForm("ResetPwd", "Settings")) {
    @Html.AntiForgeryToken()
    
    <hr />    
    
    @Html.Hidden("token", (string)ViewBag.Token)
    
    @Html.LabelFor(m => m.NewPassword)
    @Html.PasswordFor(m => m.NewPassword)
    @Html.ValidationMessageFor(m => m.NewPassword)

    @Html.LabelFor(m => m.ConfirmPassword)
    @Html.PasswordFor(m => m.ConfirmPassword)
    @Html.ValidationMessageFor(m => m.ConfirmPassword)

    <br /> <br />
    <input type="submit" value="@CommonResources.LblResetPassword" class="btn btn-large btn-primary" />
}
