@model Domain.Models.Account.ForgotUserNameOrPasswordViewModel
@using Domain.App_GlobalResources;

@{
    ViewBag.Title = CommonResources.RequestPwdResetViewBrowserTitle;
}

<h2>@CommonResources.RequestPwdReset</h2>

@using (Html.BeginForm("ForgotPassword", "Account"))
{
    @Html.AntiForgeryToken()

    <hr />

    <strong>@CommonResources.LblEmailAddress</strong>
    <br />

    <div class="row">
        <div class="col-lg-3">
            <div class="input-group merged">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control", autofocus = "" })
            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" }) <br />
        </div>
    </div>

    <br /> <br />
    <button type="submit" class="btn btn-primary btn-lg">@CommonResources.EmailLink</button>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
