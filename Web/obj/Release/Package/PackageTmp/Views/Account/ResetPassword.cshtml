@model Domain.Models.Account.ResetPasswordViewModel
@using Domain.App_GlobalResources;

@{
    ViewBag.Title = CommonResources.RequestPwdResetViewBrowserTitle;
}

<h2>@CommonResources.LblResetPassword</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    
    @Html.HiddenFor(model => model.Code)
    
    @Html.LabelFor(m => m.Email)
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group merged">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control", autofocus = "" })
            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" }) <br />
        </div>
    </div>

    @Html.LabelFor(m => m.Password)
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group merged">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" }) <br />
        </div>
    </div>

    @Html.LabelFor(m => m.ConfirmPassword)
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group merged">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" }) <br />
        </div>
    </div>

    <br /> <br />
    <button class="btn btn-lg btn-primary" type="submit">@CommonResources.LblResetPassword</button>    

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
